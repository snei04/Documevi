{
  "info": {
    "name": "Documevi API",
    "description": "Sistema de Gestión Documental IMEVI - API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre_completo\": \"Juan Pérez\",\n  \"email\": \"juan@example.com\",\n  \"documento\": \"12345678\",\n  \"password\": \"password123\",\n  \"rol_id\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documento\": \"12345678\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Set Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/set-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "set-password"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/forgot-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "forgot-password"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/reset-password/:token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "reset-password", ":token"]
            }
          }
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/usuarios/perfil",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "perfil"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre_completo\": \"Juan Pérez Actualizado\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/usuarios/perfil",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "perfil"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_password\": \"oldpassword\",\n  \"new_password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/usuarios/cambiar-password",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "cambiar-password"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/usuarios",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/:id",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", ":id"]
            }
          }
        },
        {
          "name": "Invite User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/invite",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "invite"]
            }
          }
        }
      ]
    },
    {
      "name": "Documentos",
      "item": [
        {
          "name": "Get All Documents",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/documentos",
              "host": ["{{baseUrl}}"],
              "path": ["documentos"]
            }
          }
        },
        {
          "name": "Create Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "archivo",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/documentos",
              "host": ["{{baseUrl}}"],
              "path": ["documentos"]
            }
          }
        },
        {
          "name": "Create Document from Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documentos/desde-plantilla",
              "host": ["{{baseUrl}}"],
              "path": ["documentos", "desde-plantilla"]
            }
          }
        },
        {
          "name": "Start Workflow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documentos/:id/start-workflow",
              "host": ["{{baseUrl}}"],
              "path": ["documentos", ":id", "start-workflow"]
            }
          }
        },
        {
          "name": "Advance Workflow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documentos/:id/advance-workflow",
              "host": ["{{baseUrl}}"],
              "path": ["documentos", ":id", "advance-workflow"]
            }
          }
        },
        {
          "name": "Sign Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documentos/:id/firmar",
              "host": ["{{baseUrl}}"],
              "path": ["documentos", ":id", "firmar"]
            }
          }
        }
      ]
    }
  ]
}
